extends ../layout.jade

block content
  div(ng-controller='LoginCtrl')
    div(class='alert alert-danger' ng-show='error') {{error}}
    form(novalidate ng-submit='login(user)' name='loginForm')
      label(for='email') Email
      input(
        name='email'
        id='email'
        type='email'
        ng-model='user.email'
        required)
      span(
        class='help-block'
        ng-show='loginForm.email.$touched && loginForm.email.$error.required'
        ) Email is required
      span(
        class='help-block'
        ng-show='loginForm.email.$error.email'
        ) Invalid email
      span(
        ng-show='loginForm.user.email.$error.email') Invalid email
      label(for='password') Password
      input(
        name='password'
        id='password'
        type='text'
        ng-model='user.password'
        required)
      span(
        class='help-block'
        ng-show='loginForm.password.$touched && loginForm.password.$error.required'
        ) Password is required
      input(
        class='btn btn-danger'
        type='submit'
        ng-disabled="loginForm.email.$invalid || loginForm.password.$invalid || dataLoading"
        ng-click="update(user)")
      img(
        ng-if="dataLoading" 
        src="data:image/gif;base64,")
append scripts
  script(src='js/login.js')