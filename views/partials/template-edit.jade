extend ../layout.jade

block navbar-brand
  a.navbar-brand.hidden-xs(href='#')=sails.config.appName + ' - Edit Template'

block content
  div.container(ng-controller='TemplateEditCtrl')
      h2 {{template.name}}
      h2 {{template.description}}

  <i class="fa fa-lock"></i>

append scripts
  script(src='/js/modules/template-edit.js')