html(ng-app='patch-it' lang='en')
  head
    title= sails.config.appName + ' | ' + title
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='Leigh Johnson <hi@leighjohnson.me>')
    // SCRIPTS
    script(src="/js/dependencies/sails.io.js")
    script(src="/js/dependencies/angular/angular.js")
    script(src="/js/dependencies/jquery/jquery.js")
    script(src="/js/dependencies/angular-animate/angular-animate.js")
    script(src="/js/dependencies/angular-bootstrap/ui-bootstrap-tpls.js")
    script(src="/js/dependencies/angular-cookies/angular-cookies.js")
    script(src="/js/dependencies/bootstrap-sass-official/bootstrap.js")
    script(src="/js/dependencies/ng-clip/ngClip.js")
    script(src="/js/dependencies/zeroclipboard/ZeroClipboard.js")
    script(src="/js/app.js")
    // SCRIPTS END
    // STYLES
    link(rel="stylesheet", href="/styles/font-awesome/font-awesome.css")
    link(rel="stylesheet", href="/styles/importer.css")
    // STYLES END
  body
      block menu
      .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle.pull-left(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            block navbar-brand
              a.navbar-brand.hidden-xs(href='#')=sails.config.appName
            .menu-hud.pull-left
              block menu-hud
       
          .navbar-collapse.collapse.navbar-right
            ul.nav.navbar-nav
              li
                a(href='#') Projects
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  | User 
                  span.caret
                ul.dropdown-menu(role='menu')
                  li
                    a(href='#') Profile
                  li
                    a(href='#') My tasks
                  li
                    a(href='#') 
                  li.divider
                  li.dropdown-header Admin
                  li
                    a(href='#') Separated link
                  li
                    a(href='#') One more separated link
          // /.nav-collapse
      block header
      .container
        block content
        block footer
      block scripts
